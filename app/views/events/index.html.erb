<% if user_signed_in? %>
		
		<h3>Current Tasks</h3>
		<% prev_category = " " 
		   first = true %>
		<table>
		
		<% @current.sort_by{|sortable| [sortable.category, sortable.start_time, -sortable.priority]}.each do |event| %>
		  
		  <% unless (prev_category == event.category) %>
			</table>
			<% prev_category = event.category %>
			<h4><%= prev_category %></h4>
			<table>
			
		  <% end %>
		  
		  <tr onclick="location.href='/events/<%= event.id %>'">
			<td>
				<% if (first == true) %>
					<div class="arrow-right"></div>
					<b>
				<% first = false
				end %>
			</td>
		  <td class="time"><%= event.start_time.strftime('%l:%M %p') %></td>
			<td class="event"><%= event.title %></td>
			
			<td class="event"> (until <%= event.end_time.strftime('%l:%M %p') %>
			<% unless (event.end_time.today?) %>
				<%= event.end_time.strftime('%a %d, %b, %Y') %>
			<% end %>
			)</td>
			
		  </tr>
			  
		<% end %>
		</table>
		<br />
		<h3>Upcoming Tasks</h3>

		<% prev_category = " " 
		   first = true %>
		<table>
		
		<% @upcoming.sort_by{|sortable| [sortable.category, sortable.start_time, -sortable.priority]}.each do |event| %>
		  
		  <% unless (prev_category == event.category) %>
			</table>
			<% prev_category = event.category %>
			<h4><%= prev_category %></h4>
			<table>
			
		  <% end %>
		  
		  <tr onclick="location.href='/events/<%= event.id %>'"> 
			<td></td>
			
			<td class="time"><%= event.start_time.strftime('%l:%M %p') %>
			<% unless (event.start_time.today?) %>
				<%= event.start_time.strftime('%a %d, %b, %Y') %>
			<% end %>
			</td>
			<td class="event"><%= event.title %></td>
			<td class="event"> (until <%= event.end_time.strftime('%l:%M %p') %>
			<% unless (event.end_time.to_date === event.start_time.to_date) %>
				<%= event.end_time.strftime('%a %d, %b, %Y') %>
			<% end %>
			)</td>
			
		  </tr>
			  
		<% end %>
		</table>
		<br /><br />
		<br /><br />
		
		<h2><%= link_to 'New Event', new_event_path %>
		<br /><br />
		<%= link_to 'My Ideas (unscheduled events)', ideas_path %>
		</h2>


		<footer></footer>





<% else %>
<h2> You must sign in before you can view any events </h2>
<% end %> 
	